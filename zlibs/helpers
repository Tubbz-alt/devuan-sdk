#!/usr/bin/env zsh

# get the name of the package from a filename
file-to-name() { 
    sysread in
    print ${in[(ws:_:)1]}
}
file-to-ver() {
    pn=`print $1 | file-to-name`
    ext=${1##*.}
    pver=${1#*${pn}_}
    pver=${pver%.$ext*}
    print $pver
}

tarcmd() {
    if [[ "$1" -regex-match ".*\.tar.bz2" ]]; then
        print -n j
    elif [[ "$1" -regex-match ".*\.tar.gz" ]]; then
        print -n z
    elif [[ "$1" -regex-match ".*\.tar.xz" ]]; then
        print -n J
    else
        print "Unknown tar archive: $1"
        return 1
    fi
    return 0
}
